{
  "name": "nodenogg.in",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:app": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "release:patch": "pnpm dlx changelogen@latest --release --patch",
    "release:minor": "pnpm dlx changelogen@latest --release --minor",
    "release:major": "pnpm dlx changelogen@latest --release --major"
  },
  "dependencies": {
    "@figureland/kit": "^0.0.41",
    "@nodenogg.in/app": "workspace:*",
    "@nodenogg.in/microcosm": "workspace:*",
    "@tiptap/core": "^2.10.3",
    "@tiptap/extension-character-count": "^2.10.3",
    "@tiptap/extension-document": "^2.10.3",
    "@tiptap/extension-hard-break": "^2.10.3",
    "@tiptap/extension-link": "^2.10.3",
    "@tiptap/extension-mention": "^2.10.3",
    "@tiptap/extension-placeholder": "^2.10.3",
    "@tiptap/extension-task-item": "^2.10.3",
    "@tiptap/extension-task-list": "^2.10.3",
    "@tiptap/starter-kit": "^2.10.3",
    "@tiptap/suggestion": "^2.10.3",
    "@tiptap/vue-3": "^2.10.3",
    "@vueuse/core": "^12.5.0",
    "focus-trap-vue": "^4.0.3",
    "perfect-arrows": "^0.3.7",
    "pinia": "^2.3.1",
    "radix-vue": "^1.9.13",
    "valibot": "^0.39.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@rushstack/eslint-patch": "^1.10.4",
    "@tsconfig/node18": "^18.2.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^18.19.67",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.32.0",
    "jsdom": "^23.2.0",
    "npm-run-all2": "^6.2.6",
    "postcss": "^8.4.49",
    "prettier": "^3.4.1",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.3.3",
    "vite": "^5.4.11",
    "vite-plugin-pwa": "^0.20.5",
    "vitest": "^1.6.0",
    "vue-tsc": "^1.8.27"
  },
  "workspaces": [
    "nodenoggin/*"
  ]
}
