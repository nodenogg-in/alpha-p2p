{
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "lib": ["ES2020", "dom"],
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "module": "ESNext",
    "skipLibCheck": true,
    "rootDir": "",
    "emitDeclarationOnly": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules"],
  "include": ["**/*"]
}
