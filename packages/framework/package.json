{
  "name": "@nodenogg.in/framework",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "require": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./views": {
      "types": "./src/views/index.ts",
      "require": "./src/views/index.ts",
      "import": "./src/views/index.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build:lib": "tsup && pnpm build:lib:sourcemap",
    "dev:lib": "NODE_ENV=development tsup",
    "build:lib:sourcemap": "tsc --emitDeclarationOnly --declaration",
    "size": "size-limit"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.19.31",
    "prettier": "^3.2.5",
    "size-limit": "^11.1.2",
    "tsup": "^8.0.2",
    "typescript": "~5.3.3",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.2.10",
    "vitest": "^1.5.3"
  },
  "dependencies": {
    "@figureland/infinitykit": "workspace:*",
    "@figureland/mathkit": "^0.0.28",
    "@figureland/statekit": "^0.0.74",
    "@figureland/toolkit": "^0.0.18",
    "@figureland/typekit": "^0.0.23",
    "@nodenogg.in/io": "workspace:*",
    "@nodenogg.in/microcosm": "workspace:*",
    "@size-limit/preset-small-lib": "^11.1.2",
    "superjson": "^2.2.1"
  },
  "size-limit": [
    {
      "path": "dist/index.js"
    }
  ]
}
