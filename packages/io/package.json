{
  "name": "@nodenogg.in/io",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./import": {
      "types": "./dist/import.d.ts",
      "require": "./dist/import.js",
      "import": "./dist/import.js"
    },
    "./export": {
      "types": "./dist/export.d.ts",
      "require": "./dist/export.js",
      "import": "./dist/export.js"
    },
    "./sanitize": {
      "types": "./dist/sanitize.d.ts",
      "require": "./dist/sanitize.js",
      "import": "./dist/sanitize.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test:watch": "vitest --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build:lib": "tsup && pnpm build:lib:sourcemap",
    "dev:lib": "NODE_ENV=development tsup",
    "build:lib:sourcemap": "tsc --emitDeclarationOnly --declaration",
    "size": "size-limit"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.2",
    "@tsconfig/node18": "^18.2.4",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.19.31",
    "dompurify": "^3.1.2",
    "eslint": "^8.57.0",
    "micromark": "^4.0.0",
    "micromark-extension-frontmatter": "^2.0.0",
    "micromark-extension-gfm": "^3.0.0",
    "prettier": "^3.2.5",
    "size-limit": "^11.1.2",
    "tsup": "^8.0.2",
    "typescript": "~5.3.3",
    "typescript-eslint": "^7.8.0",
    "valibot": "^0.30.0",
    "vite": "^5.2.10",
    "vitest": "^1.5.3"
  },
  "dependencies": {
    "@figureland/typekit": "^0.0.26",
    "@nodenogg.in/microcosm": "workspace:*"
  },
  "size-limit": [
    {
      "path": "dist/index.js"
    }
  ]
}
