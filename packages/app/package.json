{
  "name": "@nodenogg.in/app",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./views": {
      "types": "./dist/views.d.ts",
      "require": "./dist/views/index.js",
      "import": "./dist/views/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test:unit:watch": "vitest --watch",
    "test:unit": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build:lib": "tsup && pnpm build:sourcemap",
    "dev:lib": "NODE_ENV=development tsup",
    "build:lib:sourcemap": "tsc --emitDeclarationOnly --declaration"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.19.23",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "tsup": "^8.0.1",
    "typescript": "~5.3.3",
    "typescript-eslint": "^7.3.1",
    "vite": "^5.0.10",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@nodenogg.in/microcosm": "workspace:0.0.1",
    "@nodenogg.in/spatialkit": "workspace:0.0.1",
    "@nodenogg.in/state": "workspace:0.0.1",
    "@nodenogg.in/utils": "workspace:0.0.1",
    "micromark": "^4.0.0",
    "micromark-extension-frontmatter": "^2.0.0",
    "micromark-extension-gfm": "^3.0.0",
    "valibot": "^0.25.0",
    "vfile": "^6.0.1",
    "vfile-matter": "^5.0.0"
  }
}
