{
  "name": "@nodenogg.in/microcosm",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "require": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./telemetry": {
      "types": "./src/telemetry.ts",
      "require": "./src/telemetry.ts",
      "import": "./src/telemetry.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test:unit:watch": "vitest --watch",
    "test:unit": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "dev:lib": "NODE_ENV=development tsup",
    "build:lib": "tsup && pnpm build:lib:sourcemap",
    "build:lib:sourcemap": "tsc --emitDeclarationOnly --declaration",
    "size": "size-limit"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@size-limit/preset-small-lib": "^11.1.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.12.7",
    "eslint": "^9.1.0",
    "prettier": "^3.2.5",
    "size-limit": "^11.1.2",
    "tsup": "^8.0.2",
    "typescript": "~5.4.5",
    "typescript-eslint": "^7.7.0",
    "vite": "^5.2.10",
    "vitest": "^1.5.0"
  },
  "dependencies": {
    "@figureland/statekit": "^0.0.49",
    "@figureland/mathkit": "^0.0.17",
    "@figureland/typekit": "^0.0.15",
    "nanoid": "^5.0.7",
    "valibot": "^0.30.0"
  },
  "peerDependencies": {
    "@figureland/statekit": "^0.0.49",
    "@figureland/typekit": "^0.0.15",
    "@figureland/mathkit": "^0.0.17"
  },
  "size-limit": [
    {
      "path": "dist/index.js"
    }
  ]
}
