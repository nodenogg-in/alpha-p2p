{
  "name": "@figureland/mathkit",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "require": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./Vector2": {
      "types": "./src/Vector2.ts",
      "require": "./src/Vector2.ts",
      "import": "./src/Vector2.ts"
    },
    "./Matrix2D": {
      "types": "./src/Matrix2D.ts",
      "require": "./src/Matrix2D.ts",
      "import": "./src/Matrix2D.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "test:unit:watch": "vitest --watch",
    "test:unit": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
