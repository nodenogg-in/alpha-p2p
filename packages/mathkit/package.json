    "build:lib": "tsup && pnpm build:lib:sourcemap",
    "build:lib:sourcemap": "tsc --emitDeclarationOnly --declaration"
  },
  "devDependencies": {
    "eslint": "^8.49.0",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.19.3",
    "prettier": "^3.0.3",
    "tsup": "^8.0.1",
    "typescript-eslint": "^7.3.1",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vitest": "^1.0.4"
  }
