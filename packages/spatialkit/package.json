{
  "name": "@nodenogg.in/spatialkit",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test:unit:watch": "vitest --watch",
    "test:unit": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "dev:lib": "NODE_ENV=development tsup",
    "build:lib": "tsup && pnpm build:sourcemap",
    "build:lib:sourcemap": "tsc --emitDeclarationOnly --declaration",
    "size": "pnpm build && size-limit"
  },
  "devDependencies": {
    "@size-limit/file": "^11.1.2",
    "@size-limit/preset-big-lib": "^11.1.2",
    "@types/node": "^20.11.30",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "size-limit": "^11.1.2",
    "tsup": "^8.0.1",
    "typescript-eslint": "^7.3.1",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@nodenogg.in/state": "workspace:0.0.1",
    "@nodenogg.in/utils": "workspace:0.0.1",
    "valibot": "^0.25.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "import": "{ Canvas }"
    }
  ]
}
