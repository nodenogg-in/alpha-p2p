{
  "name": "@nodenogg.in/statekit",
  "version": "0.0.1",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./vue": {
      "types": "./src/vue.ts",
      "require": "./dist/vue/index.js",
      "import": "./dist/vue/index.js"
    },
    "./react": {
      "types": "./src/react.ts",
      "require": "./dist/react/index.js",
      "import": "./dist/react/index.js"
    },
    "./svelte": {
      "types": "./src/svelte.ts",
      "require": "./dist/svelte/index.js",
      "import": "./dist/svelte/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "peerDependencies": {
    "@types/react": ">=16.8",
    "react": ">=16.8",
    "svelte": "^4.0,0",
    "vue": ">=3.0,0",
    "superjson": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    },
    "@types/react": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "svelte": {
      "optional": true
    },
    "superjson": {
      "optional": true
    }
  },
  "scripts": {
    "test:unit:watch": "vitest --watch",
    "test:unit": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "dev:lib": "NODE_ENV=development tsup",
    "build:lib": "tsup && pnpm build:lib:sourcemap",
    "build:lib:sourcemap": "tsc --emitDeclarationOnly --declaration",
    "size": "size-limit"
  },
  "devDependencies": {
    "@nodenogg.in/toolkit": "workspace:0.0.1",
    "@size-limit/preset-small-lib": "^11.1.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.19.3",
    "@types/react": "^18.2.66",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "size-limit": "^11.1.2",
    "svelte": "^4.2.12",
    "tsup": "^8.0.1",
    "typescript": "~5.3.0",
    "typescript-eslint": "^7.3.1",
    "vite": "^5.0.10",
    "vitest": "^1.0.4",
    "vue": "^3.3.11"
  },
  "size-limit": [
    {
      "path": "dist/index.js"
    }
  ]
}
