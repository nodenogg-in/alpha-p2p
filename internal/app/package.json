{
  "name": "@nodenogg.in/app",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "require": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./views": {
      "types": "./src/views/index.ts",
      "require": "./src/views/index.ts",
      "import": "./src/views/index.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test:unit:watch": "vitest --watch",
    "test:unit": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build:lib": "tsup && pnpm build:lib:sourcemap",
    "dev:lib": "NODE_ENV=development tsup",
    "build:lib:sourcemap": "tsc --emitDeclarationOnly --declaration",
    "size": "size-limit"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.19.23",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "size-limit": "^11.1.2",
    "tsup": "^8.0.1",
    "typescript": "~5.3.3",
    "typescript-eslint": "^7.3.1",
    "vite": "^5.0.10",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@nodenogg.in/microcosm": "workspace:0.0.1",
    "@nodenogg.in/spacekit": "workspace:0.0.1",
    "@nodenogg.in/statekit": "workspace:0.0.1",
    "@nodenogg.in/toolkit": "workspace:0.0.1",
    "@size-limit/preset-small-lib": "^11.1.2",
    "micromark": "^4.0.0",
    "micromark-extension-frontmatter": "^2.0.0",
    "micromark-extension-gfm": "^3.0.0",
    "valibot": "^0.25.0",
    "vfile": "^6.0.1",
    "vfile-matter": "^5.0.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js"
    }
  ]
}
